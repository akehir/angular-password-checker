{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@triangular/password-checker": [
        "dist/password-checker-lib"
      ],
      "@triangular/password-checker/*": [
        "dist/password-checker-lib/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
